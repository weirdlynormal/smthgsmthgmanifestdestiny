import React, { useState } from "react";
import "./Dialog.css";

function SecurityQuestionDialog({ show, questions = ["Mother's Surname", "Pet's Name"], onSubmit }) {
    const [selectedQuestion, setSelectedQuestion] = useState(questions[0] || "");
    const [answer, setAnswer] = useState("");
    if (!show) return null;

    const handleQuestionChange = (e) => {
        setSelectedQuestion(e.target.value);
    };

    const handleSubmit = (e) => {
        e.preventDefault();
        if (onSubmit) onSubmit(selectedQuestion, answer);
        setAnswer("");
    };

    return (
        <div className="dialog-backdrop">
            <div className="dialog-box">
                <div className="dialog-title">Security Question</div>
                <form onSubmit={handleSubmit}>
                    <select
                        className="dialog-select"
                        value={selectedQuestion}
                        onChange={handleQuestionChange}
                    >
                        {questions.map((q, idx) => (
                            <option key={idx} value={q}>
                                {q}
                            </option>
                        ))}
                    </select>
                    <input
                        type="text"
                        value={answer}
                        onChange={e => setAnswer(e.target.value)}
                        className="dialog-input"
                        placeholder="Enter your answer"
                        required
                    />
                    <button type="submit" className="btn btn-success w-100 mt-3">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    );
}

export default SecurityQuestionDialog;
