import React from "react";
import styles from "./Dialog.module.css";

function ErrorDialog({ show, message, onClose }) {
    if (!show) return null;
    const displayMessage = message || "Error";
    return (
        <div className={styles.dialogBackdrop} onClick={onClose}>
            <div className={styles.dialogBox}>
                <div className={styles.dialogTitle}>Error</div>
                <div className={styles.dialogMessage}>{displayMessage}</div>
                <button className="btn btn-secondary w-100 mt-3" onClick={onClose}>Close</button>
            </div>
        </div>
    );
}

export default ErrorDialog;
